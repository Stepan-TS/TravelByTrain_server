{
    "type": "module",
    "dependencies": {
        "express": "^4.18.2",
        "lodash": "^4.17.21",
        "path": "^0.12.7"
    },
    "scripts": {
        "start": "nodemon src/app.js",
        "format": "npx prettier --write . --ignore-path .gitignore",
        "lint": "eslint . --ignore-path .gitignore --fix",
        "fix-style": "npm run format && npm run lint",
        "prepare": "husky install"
    },
    "devDependencies": {
        "eslint": "^8.41.0",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.2",
        "nodemon": "^2.0.22",
        "prettier": "2.8.8"
    },
    "lint-staged": {
        "*.js": "npm run fix-style"
    }
}
